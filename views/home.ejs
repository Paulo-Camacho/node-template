<head>
  <%- include("partials/head.ejs") %>
  <title>Home</title>
</head>
  <%- include("partials/nav.ejs") %>
<body class="text-center bg-light">

  <div class="container mt-5">
    <h1 class="bg-primary text-white p-4 rounded">Famous Quote Report</h1>

    <!-- Navigation Buttons -->
    <div class="mt-4 mb-5">
      <a href="/addAuthor" class="btn btn-success me-2">Add / Remove Author</a>
      <a href="/addQuote" class="btn btn-warning">Add / Remove Quote</a>
    </div>

    <!-- Search by Keyword -->
    <form action="/searchByKeyword" method="GET" class="mt-4 p-4 bg-white border rounded shadow-sm">
      <div class="mb-3">
        <label for="keyword" class="form-label">Search by Keyword</label>
        <input type="text" name="keyword" id="keyword" class="form-control" placeholder="Enter keyword">
      </div>
      <button type="submit" class="btn btn-info w-100">Search</button>
    </form>

    <hr class="my-5">

    <!-- Search by Author -->
    <form action="/searchByAuthor" method="GET" class="p-4 bg-white border rounded shadow-sm">
      <div class="mb-3">
        <label for="authorId" class="form-label">Search by Author</label>
        <select name="authorId" id="authorId" class="form-select">
          <% rows.forEach(author => { %>
            <option value="<%= author.authorId %>">
              <%= author.firstName %> <%= author.lastName %>
            </option>
          <% }) %>
        </select>
      </div>
      <button type="submit" class="btn btn-info w-100">Search</button>
    </form>
  </div>

  <%- include("partials/footer.ejs") %>
</body>

</html>
